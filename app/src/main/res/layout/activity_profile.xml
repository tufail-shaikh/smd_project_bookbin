<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <Toolbar
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:title="Profile"
        android:layout_height="?attr/actionBarSize"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/profile">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/profile_name"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/profile_name"
            android:id="@+id/profile_name1"
            android:layout_height="wrap_content"
            android:text="Name "
            android:textSize="24sp"
            android:textColor="#000000" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_email"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/profile_name"
            android:layout_height="wrap_content"
            android:text="Email:  "
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/profile_email"
            android:layout_below="@+id/profile_name"
            android:id="@+id/profile_email1"
            android:layout_height="wrap_content"
            android:text="Email "
            android:textSize="24sp"
            android:textColor="#000000" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_number"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="24sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profile_number1"
            android:layout_toRightOf="@+id/profile_number"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/profile_email"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="24sp"
            android:textColor="#000000" />



    </RelativeLayout>


</RelativeLayout>