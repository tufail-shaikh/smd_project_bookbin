<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account">
    <Toolbar
        android:layout_width="match_parent"
        android:id="@+id/account"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:title="Account"
        android:layout_height="?attr/actionBarSize"
        />


    <TextView
        android:id="@+id/account_profile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="#f5f5f5"
        android:clickable="true"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="15dp"
        android:onClick="view_profile"
        android:outlineProvider="background"
        android:padding="25dp"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/account_orders"
        android:layout_marginTop="20dp"
        android:onClick="view_orders"
        android:layout_height="80dp"
        android:text="View Orders"
        android:textSize="22sp"
        android:drawableTint="#000000"
        android:drawableStart="@drawable/ic_outline_shopping_bag_24"
        android:drawablePadding="15dp"
        android:clickable="true"
        android:textColor="#000000"
        android:outlineProvider="background"
        android:background="#f5f5f5"
        android:padding="25dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="80dp"
        android:text="Help"
        android:onClick="help"
        android:id="@+id/account_help"
        android:textSize="22sp"
        android:drawableTint="#000000"
        android:drawableStart="@drawable/ic_outline_help_outline_24"
        android:drawablePadding="15dp"
        android:textColor="#000000"
        android:clickable="true"
        android:outlineProvider="background"
        android:background="#f5f5f5"
        android:padding="25dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="80dp"
        android:text="About us"
        android:onClick="aboutus"
        android:id="@+id/account_aboutus"
        android:textSize="22sp"
        android:drawableTint="#000000"
        android:clickable="true"
        android:drawableStart="@drawable/ic_outline_info_24"
        android:drawablePadding="15dp"
        android:textColor="#000000"
        android:outlineProvider="background"
        android:background="#f5f5f5"
        android:padding="25dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="80dp"
        android:text="Log out"
        android:id="@+id/account_logout"
        android:textSize="22sp"
        android:onClick="logout"
        android:clickable="true"
        android:drawableTint="#000000"
        android:drawableStart="@drawable/ic_baseline_exit_to_app_24"
        android:drawablePadding="15dp"
        android:textColor="#000000"
        android:outlineProvider="background"
        android:background="#f5f5f5"
        android:padding="25dp"
        />

    <RelativeLayout
        android:id="@+id/bottom_navigation_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="#5ABD8C"
            />
    </RelativeLayout>

</LinearLayout>